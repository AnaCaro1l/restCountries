{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": false,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "disableSizeLimit": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "src/__tests__/**/*",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
